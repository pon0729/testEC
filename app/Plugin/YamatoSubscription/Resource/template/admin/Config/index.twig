{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'yamatosubscription.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'yamatosubscription.admin.config.sub_title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
{% endblock %}

{% block main %}
    <form id="config_form" method="post" action="{{ url('yamato_subscription_admin_config') }}">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ 'yamatosubscription.admin.config.header1'|trans }}</span></div>
                        <div class="card-body">
                            {{ form_row(form.ignoring_sale_type_ids) }}
                        </div><!-- /.card-body -->
                    </div><!-- /.card.rounded -->
                </div>
            </div>
        </div><!-- /.c-contentsArea__cols -->

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-beseLink"
                               href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'yamatosubscription.admin.config.back'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'yamatosubscription.admin.config.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.c-contentsArea__cols -->
    </form>
{% endblock %}
