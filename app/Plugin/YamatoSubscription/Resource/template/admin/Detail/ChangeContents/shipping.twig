{% block javascript %}
    <script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

    <script>
        // 項目数が多く、入力している項目によってEnter押下時に期待する動作が変わるので、いったん禁止
        $(document).on('keydown', 'input', function(e) {
            if ((e.which && e.which === 13) || (e.keyCode && e.keyCode === 13)) {
                return false;
            } else {
                return true;
            }
        });

        function calculateCollectionHoldersCurrentIndex($collectionHolder) {
            if ($collectionHolder.find('tbody > tr').length == 0) {
                return 0;
            }
            return parseInt($collectionHolder.find('tbody > tr').last().data('index'), 10);
        }

        // 商品追加
        $('.addProduct-button').on('click', function() {
            if (!document.querySelector('#form1').reportValidity()) {
                return false;
            }
            var no = $(this).data('shipping-no');
            $collectionHolder = $('#table-form-field_' + no);
            index = calculateCollectionHoldersCurrentIndex($collectionHolder);
            formIdPrefix = '#form_YamatoSubsUsersShippings_' + no + '_YamatoSubsUsersOrderItems_';
        })

        // その他明細追加
        $('.addOtherProduct-button').on('click', function() {
            if (!document.querySelector('#form1').reportValidity()) {
                return false;
            }
            var no = $(this).data('shipping-no');
            $collectionHolder = $('#table-form-field_' + no);
            index = calculateCollectionHoldersCurrentIndex($collectionHolder);
            formIdPrefix = '#form_YamatoSubsUsersShippings_' + no + '_YamatoSubsUsersOrderItems_';
        })

        // 商品検索
        $('#searchProductModalButton').on('click', function() {
            var $list = $('#searchProductModalList');
            $list.children().remove();

            var strExistProductIds = "";
            $collectionHolder.find('tbody > tr').each(function(index, row) {
                productId = $(row).data('product-id');
                strExistProductIds = strExistProductIds == "" ? productId : strExistProductIds + ',' + productId;
            });

            $.ajax({
                url: '{{ url('plugin_yamato_subscription_admin_search_product') }}',
                type: 'POST',
                dataType: 'html',
                data: {
                    'id': $('#admin_search_product_id').val(),
                    'category_id': $('#admin_search_product_category_id').val(),
                    'exist_product_ids': strExistProductIds
                }
            }).done(function(data) {
                $('#searchProductModalList').html(data);
            }).fail(function(data) {
                alert('search product failed.');
            });
        });

        // その他明細
        $('#addOrderItemType').on('show.bs.modal', function(e) {
            var $list = $('#searchOrderItemTypeList');
            $list.children().remove();

            $.ajax({
                url: '{{ url('plugin_yamato_subscription_admin_search_order_item_type') }}',
                type: 'POST',
                dataType: 'html',
                data: {
                    'searchDeliveryFeeOnly': true
                }
            }).done(function(data) {
                $('#searchOrderItemTypeList').html(data);
            }).fail(function(data) {
                alert('search order item type failed.');
            });
        });

        $('.js-delete-item-modal-button').on('click', function(e) {
            if (!document.querySelector('#form1').reportValidity()) {
                return false;
            }
        });

        $(document).on('click', '.delete', function(e) {
            // 商品削除
            $(this).parents('tr').remove();
            $("#form1").submit();

            return false;
        });
        $('a[id^="js_delete_shipping_button_"').on('click', function(e) {
            if (!document.querySelector('#form1').reportValidity()) {
                return false;
            }
        });

        $(document).on('click', '.delete-shipping', function(e) {
            // お届け先削除
            $(this).parents('div.card').remove();
            //$("#form1").submit();
            $("#btn_save").trigger('click');

            return false;
        });

        {# TODO: 商品削除時に更新が走って画面上に行ってしまう。 #}
        // 計算結果の更新が押されたらページ内リンクさせる
        // $('.btn').click(function() {
        //     var data = $(this).data();
        //     if (data.link) {
        //         $('#form1').attr('action', '#' + data.link).submit();
        //         return false;
        //     }
        // });

        // 配送業者選択時にお届け時間を設定
        var times = {{ shippingDeliveryTimes|raw }};

        $("select[id$='_Delivery']").on('change', function() {
            var deliveryId = $(this).val();
            var $shippingDeliveryTime = $(this).parents('.card-body').find("select[id$='_DeliveryTime']");
            $shippingDeliveryTime.find('option').remove();
            $shippingDeliveryTime.append($('<option></option>').val('').text(trans('admin.common.select__unspecified')));
            if (typeof(times[deliveryId]) !== 'undefined') {
                for (var timeId in times[deliveryId]) {
                    timeValue = times[deliveryId][timeId];
                    $shippingDeliveryTime.append($('<option></option>')
                        .val(timeId)
                        .text(timeValue));
                }
            }
        });

        $('#addShipping').on('click', function() {
            if (!document.querySelector('#form1').reportValidity()) {
                return false;
            }

            $('#form_add_shipping').val("1");
            $("#form1").submit();

            return false;
        })
    </script>

