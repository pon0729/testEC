{% block javascript %}
    <script src="https://yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
    <script>
        $(function() {
            // 項目数が多く、入力している項目によってEnter押下時に期待する動作が変わるので、いったん禁止
            $(document).on('keydown', 'input', function(e) {
                if ((e.which && e.which === 13) || (e.keyCode && e.keyCode === 13)) {
                    return false;
                } else {
                    return true;
                }
            });

            $('#addProductButton').on('click', function(e) {
                if (!document.querySelector('#form1').reportValidity()) {
                    return false;
                }
            });
            // 商品検索
            $('#searchProductModalButton').on('click', function() {
                var $list = $('#searchProductModalList');
                $list.children().remove();

                var strExistProductIds = "";
                $(this).closest('.card-body').find("#table-form-field tbody tr").each(function(index, row) {
                    productId = $(row).data('product-id');
                    if (productId) {
                        strExistProductIds = strExistProductIds == "" ? productId : strExistProductIds + ',' + productId;
                    }
                });

                $.ajax({
                    url: '{{ url('plugin_yamato_subscription_admin_search_product') }}',
                    type: 'POST',
                    dataType: 'html',
                    data: {
                        'id': $('#admin_search_product_id').val(),
                        'category_id': $('#admin_search_product_category_id').val(),
                        'exist_product_ids': strExistProductIds
                    }
                }).done(function(data) {
                    $('#searchProductModalList').html(data);
                }).fail(function(data) {
                    alert('search product failed.');
                });
            });

            // その他明細
            $('#addOrderItemTypeButton').on('click', function(e) {
                if (!document.querySelector('#form1').reportValidity()) {
                    return false;
                }
            });
            $('#addOrderItemType').on('show.bs.modal', function(e) {
                var $list = $('#searchOrderItemTypeList');
                $list.children().remove();

                $.ajax({
                    url: '{{ url('plugin_yamato_subscription_admin_search_order_item_type') }}',
                    type: 'POST',
                    dataType: 'html',
                    data: {
                        {% if YamatoSubsUsersOrder.isMultiple %}
                        'excludeDeliveryFee': true
                        {% endif %}
                    }
                }).done(function(data) {
                    $('#searchOrderItemTypeList').html(data);
                }).fail(function(data) {
                    alert('search order item type failed.');
                });
            });

            // ページング処理
            $(document).on('click', '#searchProductModalList ul.pagination li.page-item a.page-link', function(e) {
                e.preventDefault();
                var list = $('#searchProductModalList');
                list.children().remove();
                var url = $(this).attr('href');
                $.ajax({
                    url: url,
                    type: 'GET',
                    dataType: 'html'
                }).done(function(data) {
                    $('#searchProductModalList').html(data);
                }).fail(function(data) {
                    alert('search product failed.');
                });
            });

            // 商品追加の制御
            $collectionHolder = $('#table-form-field');
            formIdPrefix = '#yamato_subs_users_order_YamatoSubsUsersOrderItems_';
            if ($collectionHolder.find('tbody > tr').length === 0) {
                index = 0;
            } else {
                var $lastRow = $collectionHolder.find('tbody > tr').last();
                index = parseInt($lastRow.data('index'), 10);
            }

            $('.js-delete-item-modal-button').on('click', function(e) {
                if (!document.querySelector('#form1').reportValidity()) {
                    return false;
                }
            });


            $(document).on('click', '.delete', function(e) {
                // 商品削除
                $(this).parents('tr').remove();
                index--;
                $("#calculate").trigger('click');
            });

            // 計算結果の更新が押されたらページ内リンクさせる
            $('#calculate').on('click', function() {
                var $form = $('#form1');
                if (!$form.get(0).reportValidity()) {
                    return false;
                }

                $form.append('<input type="hidden" name="mode" value="calc">');
                var data = $(this).data();
                if (data.link) {
                    $form.attr('action', '#' + data.link).submit();
                }
            });

            // お届け時間の初期表示
            $('#order_Shipping_Delivery').change();

            var confirmFormChange = function(form, target, modal) {
                var returnLink = form.find('input[type="hidden"][name*="return_link"]'),
                    saveBtn = modal.find('a[data-action="save"]'),
                    cancelBtn = modal.find('a[data-action="cancel"]');
                modal.on('hidden.bs.modal', function() {
                    returnLink.val('');
                });
                saveBtn.on('click', function() {
                    if (!document.querySelector('#form1').reportValidity()) {
                        return false;
                    }

                    returnLink.val($(this).data('return-link'));
                    $(this).addClass('disabled');
                    $('#form1').append('<input type="hidden" name="mode" value="register">');
                    form.submit();
                });
                target.on('click', function() {
                    modal.find('.modal-body .screen-name').text($(this).attr('title'));
                    modal.modal('show');
                    saveBtn.data('return-link', $(this).attr('href'));
                    cancelBtn.attr('href', $(this).attr('href'));
                    return false;
                });
            };
            confirmFormChange($('#form1'), $('a[data-action="confirm"]'), $('#confirmFormChangeModal'));

            // 配送業者選択時にお届け時間を設定
            var times = {{ shippingDeliveryTimes|raw }};
            $('#order_Shipping_Delivery').change(function() {
                var deliveryId = $(this).val();
                var $shippingDeliveryTime = $('#order_Shipping_DeliveryTime');
                $shippingDeliveryTime.find('option').remove();
                $shippingDeliveryTime.append($('<option></option>').val('').text('指定なし'));
                if (typeof(times[deliveryId]) !== 'undefined') {
                    for (var timeId in times[deliveryId]) {
                        timeValue = times[deliveryId][timeId];
                        $shippingDeliveryTime.append($('<option></option>')
                            .val(timeId)
                            .text(timeValue));
                    }
                }
            });

            //定期配送リセット確認
            const form = document.querySelector("#form1");
            form.addEventListener("submit", function(event){
                if(typeof btnMode!=='undefined' && btnMode=='register' && document.getElementById("yamato_subs_users_order_delivery_count_reset").checked){
                    	if(window.confirm('{{ 'yamatosubscription.admin.detail.reset_confirm'|trans }}')){ return true; }
                        else{
                            event.stopPropagation();
                            event.preventDefault();           
                            btnMode = null;        
                        }
                }
            });

        });

        {# ポイント機能が有効かつ会員の場合のみポイントの割引金額を変更する #}
        {% if BaseInfo.isOptionPoint and YamatoSubsUsersOrder.Customer is not null %}
            // 再計算時のポイントの割引金額の更新
            function updatePointItem() {
                // ポイント換算レート
                var pointConversionRate = {{ BaseInfo.point_conversion_rate }};
                // 利用ポイント
                var usePoint = $('#order_use_point').val();

                // 利用ポイントが数値以外の時は割引金額を更新しない
                if (isNaN(usePoint)) return;

                // 割引金額を計算
                var discountPrice = (-1) * pointConversionRate * usePoint;

                // ポイント明細の金額の要素を取得
                var $pointPrice = $('.pointPrice');

                // ポイント明細の金額の要素がある場合はポイントの更新
                if ($pointPrice.length) {
                    $pointPrice.val(discountPrice);
                }
            }
        {% endif %}
    </script>
{% endblock javascript %}

