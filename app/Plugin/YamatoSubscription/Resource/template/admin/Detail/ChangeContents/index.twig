                                            <div class="col-8">{{ 'admin.order.tax_type'|trans }}</div>
                                        </th>
                                        <th class="pt-2 pb-2">
                                            <div class="col-8">{{ 'admin.order.subtotal'|trans }}</div>
                                        </th>
                                        <th class="pt-2 pb-2 pr-3"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for index, Form in form.YamatoSubsUsersOrderItems %}
                                        {% set YamatoSubsUsersOrderItem = Form.vars.data %}
                                        {% set isReferralCodeItem = 'ReferralCodeProcessor' in YamatoSubsUsersOrderItem.processorName %}
                                        <tr data-index="{{ index }}" {% if YamatoSubsUsersOrderItem.isProduct %}data-product-id="{{ YamatoSubsUsersOrderItem.Product.id }}"{% endif %}>
                                            {# hidden values #}
                                            {{ form_widget(Form.ProductClass) }}
                                            {{ form_widget(Form.order_item_type) }}
                                            {{ form_widget(Form.tax_type) }}
                                            <!-- 商品名 -->
                                            <td class="align-middle w-25 pl-3">
                                                <p class="mb-0 font-weight-bold">
                                                    {# 商品とポイント値引きは名前変更できない #}
                                                    {% if YamatoSubsUsersOrderItem.isProduct or YamatoSubsUsersOrderItem.isPoint %}
                                                        {% if YamatoSubsUsersOrderItem.isProduct %}
                                                            <a href="{{ url('admin_product_product_edit', {id: YamatoSubsUsersOrderItem.ProductClass.Product.id}) }}" target="_blank">
                                                                {{ YamatoSubsUsersOrderItem.productName }}
                                                            </a>
                                                        {% else %}
                                                            {{ YamatoSubsUsersOrderItem.productName }}
                                                        {% endif %}
                                                        {{ form_widget(Form.product_name, { 'type': 'hidden' }) }}
                                                    {% else %}
                                                        {{ form_widget(Form.product_name) }}
                                                    {% endif %}
                                                </p>
                                                <span>
                                                    {{ YamatoSubsUsersOrderItem.productCode }}
                                                    {% if YamatoSubsUsersOrderItem.classCategoryName1 is not empty %}
                                                        / (
                                                        {{ YamatoSubsUsersOrderItem.className1 }}：
                                                        {{ YamatoSubsUsersOrderItem.classCategoryName1 }}
                                                        {% if YamatoSubsUsersOrderItem.classCategoryName2 is not empty %}
                                                            /
                                                            {{ YamatoSubsUsersOrderItem.className2 }}：
                                                            {{ YamatoSubsUsersOrderItem.classCategoryName2 }}
                                                        {% endif %}
                                                        )
                                                    {% endif %}
                                                </span>
                                                {{ form_errors(Form.product_name) }}
                                            </td>
                                            <!-- 金額 -->
                                            <td class="align-middle">
                                                <div class="col mt-3">
                                                    {# ポイント値引きは価格変更できない #}
                                                    {% if YamatoSubsUsersOrderItem.isPoint %}
                                                        {{ form_widget(Form.price, {'attr': { 'readonly': 'readonly', 'class': 'pointPrice' } }) }}
                                                    {% else %}
                                                        {{ form_widget(Form.price) }}
                                                    {% endif %}
                                                    <div class="text-right small">({{ YamatoSubsUsersOrderItem.TaxDisplayType }})</div>
                                                    {{ form_errors(Form.price) }}
                                                </div>
                                            </td>
                                            <!-- 数量 -->
                                            <td class="align-middle">
                                                <div class="col-12 col-xl-8">
                                                    {# 複数配送の場合は商品の個数を変更できない、ポイントの場合も個数を変更できない #}
                                                    {% if (YamatoSubsUsersOrder.isMultiple and YamatoSubsUsersOrderItem.isProduct) or YamatoSubsUsersOrderItem.isPoint %}
                                                        {{ form_widget(Form.quantity, { 'attr': { 'readonly': 'readonly' } }) }}
                                                    {% elseif isReferralCodeItem %}
                                                        {{ form_widget(Form.quantity, { 'attr': { 'readonly': 'readonly' } }) }}
                                                    {% else %}
                                                        {{ form_widget(Form.quantity) }}
                                                    {% endif %}
                                                    {{ form_errors(Form.quantity) }}
                                                </div>
                                            </td>
                                            <!-- 税率 -->
                                            <td class="align-middle">
                                                <div class="col-12 col-xl-8">
                                                    {# 複数配送・ポイント明細・不課税明細は商品の税率を変更できない #}
                                                    {% if (YamatoSubsUsersOrder.isMultiple and YamatoSubsUsersOrderItem.isProduct) or YamatoSubsUsersOrderItem.isPoint or YamatoSubsUsersOrderItem.TaxType.id == constant('Eccube\\Entity\\Master\\TaxType::NON_TAXABLE') %}
                                                        {{ form_widget(Form.tax_rate, { 'attr': { 'readonly': 'readonly' } }) }}
                                                    {% elseif isReferralCodeItem %}
                                                        {{ form_widget(Form.tax_rate, { 'attr': { 'readonly': 'readonly' } }) }}
                                                    {% else %}
                                                        {{ form_widget(Form.tax_rate) }}
                                                    {% endif %}
                                                    {{ form_errors(Form.tax_rate) }}
                                                </div>
                                            </td>
                                            <!-- 課税区分 -->
                                            <td class="align-middle">
                                                <div class="col">
                                                    {{ YamatoSubsUsersOrderItem.taxType }}
                                                </div>
                                            </td>
                                            <!-- 小計 -->
                                            <td class="align-middle">
                                                <div class="col">
                                                    <span>{{ YamatoSubsUsersOrderItem.totalPrice|price }}</span>
                                                </div>
                                            </td>
                                            <td class="align-middle text-right pr-3">
                                                <div class="row justify-content-end">
                                                    {# 複数配送の場合は商品を削除できない #}
                                                    {# ポイント割引も削除できない #}
                                                    {# 紹介コード割引も削除できない #}
                                                    {% if (YamatoSubsUsersOrder.isMultiple and YamatoSubsUsersOrderItem.isProduct) or YamatoSubsUsersOrderItem.isPoint or isReferralCodeItem %}
                                                        <div class="col-auto text-center">
                                                            <div class="d-inline-block mr-3" data-tooltip="true"
                                                                 data-placement="top" title="{{ 'admin.common.delete'|trans }}">
                                                                <a class="btn btn-ec-actionIcon disabled">
                                                                    <i class="fa fa-close fa-lg text-secondary" aria-hidden="true"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    {% else %}
                                                        <div class="col-auto text-center">
                                                            <div class="d-inline-block mr-3" data-tooltip="true"
                                                                 data-placement="top" title="{{ 'admin.common.delete'|trans }}">
                                                                <a class="btn btn-ec-actionIcon js-delete-item-modal-button" data-toggle="modal" data-target="#delete_{{ Form.vars.id }}">
                                                                    <i class="fa fa-close fa-lg text-secondary" aria-hidden="true"></i>
                                                                </a>
                                                            </div>
                                                            <!-- 明細の削除確認モーダル -->
                                                            <div class="modal fade" id="delete_{{ Form.vars.id }}" tabindex="-1" role="dialog" aria-labelledby="delete_{{ Form.vars.id }}" aria-hidden="true">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title font-weight-bold">{{ 'admin.common.delete_modal__title'|trans }}</h5>
                                                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true">×</span>
                                                                            </button>
                                                                        </div>
                                                                        <div class="modal-body text-left">
                                                                            <p class="text-left">{{ 'admin.order.delete_item__confirm_message'|trans({ '%name%' : YamatoSubsUsersOrderItem.productName }) }}</p>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button class="btn btn-ec-sub" type="button" data-dismiss="modal">{{ 'admin.common.cancel'|trans }}</button>
                                                                            <a href="#order-product" class="btn delete btn-ec-delete">{{ 'admin.common.delete'|trans }}</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <hr class="mt-0">
                                <!-- 小計 -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.subtotal'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle font-weight-normal">{{ YamatoSubsUsersOrder.subTotal|price }}</span></div>
                                </div>
                                <!-- 送料 -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.delivery_fee'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle font-weight-normal">{{ YamatoSubsUsersOrder.deliveryFeeTotal|price }}</span></div>
                                </div>
                                <!-- 手数料 -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.common.charge'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle font-weight-normal">{{ YamatoSubsUsersOrder.charge|price }}</span></div>
                                </div>
                                <!-- 値引き -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.discount'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle text-danger font-weight-normal">{{ YamatoSubsUsersOrder.taxableDiscount|price }}</span></div>
                                </div>
                                <hr>
                                <!-- 合計 -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.total'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle font-weight-normal">{{ YamatoSubsUsersOrder.taxableTotal|price }}</span></div>
                                </div>
                                {% for rate, total in YamatoSubsUsersOrder.taxableTotalByTaxRate %}
                                    <div class="row justify-content-end mb-3">
                                        <div class="col-auto"><span class="align-middle">{{ 'common.tax_rate_target'|trans({ '%rate%': rate }) }}</span></div>
                                        <div class="col-2 text-right"><span class="align-middle font-weight-normal">{{ total|price }}</span></div>
                                    </div>
                                {% endfor %}
                                <hr>
                                {% for item in YamatoSubsUsersOrder.taxFreeDiscountItems %}
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ item.productName }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle text-danger font-weight-normal">{{ item.totalPrice|price }}</span></div>
                                </div>
                                {% endfor %}
                                <!-- お支払い合計 -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.payment_total'|trans }}</span></div>
                                    <div class="col-2 text-right"><span class="h4 align-middle font-weight-normal">{{ YamatoSubsUsersOrder.paymentTotal|price }}</span></div>
                                </div>
                                <hr>
                                <!-- 加算ポイント -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.add_point'|trans }}</span></div>
                                    <div class="col-2 text-right">
                                        <span class="h4 align-middle font-weight-normal">
                                            {{ form.vars.value.addPoint|number_format }}
                                        </span>
                                    </div>
                                </div>
                                <!-- 利用ポイント -->
                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto"><span class="align-middle">{{ 'admin.order.use_point'|trans }}</span></div>
                                    <div class="col-2 text-right">
                                        <span class="h4 align-middle font-weight-normal">
                                            {# ポイント機能が有効かつ会員の場合のみポイントを編集可能とする #}
                                            {% if BaseInfo.isOptionPoint and YamatoSubsUsersOrder.Customer is not null %}
                                                {{ form_widget(form.use_point) }}
                                            {% else %}
                                                {{ form_widget(form.use_point, {'attr': { 'readonly': 'readonly' } }) }}
                                            {% endif %}
                                            {{ form_errors(form.use_point) }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- .card.rounded -->
                </div>
            </div>
        </div>

        <!-- コンバージョンエリア -->
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{ url('plugin_yamato_subscription_admin_detail', { 'resume': 1, 'id': id }) }}"><i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'yamatosubscription.admin.detail_change_contents.back'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-ec-conversion px-5" name="mode" value="register" onClick='btnMode="register"'>{{ 'admin.common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
